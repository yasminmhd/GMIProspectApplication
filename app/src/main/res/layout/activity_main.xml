<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- banner on top -->
    <TextView
        android:id="@+id/tv_banner"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/banner_bg"
        android:gravity="center"
        android:text="GMI Prospect Application"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Scrollable list of course cards -->
    <ScrollView
        android:id="@+id/scroll_courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_banner"
        android:layout_above="@id/bottom_toolbar"
        android:padding="12dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Diploma card -->
            <LinearLayout
                android:id="@+id/card_diploma"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/card_bg"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:text="Diploma"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_card_diploma_desc"
                    android:text="Diploma in Business\nDiploma in Computer Science\nDiploma in Engineering"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- GUFP card -->
            <LinearLayout
                android:id="@+id/card_gufp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/card_bg"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:text="GUFP"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_card_gufp_desc"
                    android:text="GUFP - Pre-University Arts\nGUFP - Pre-University Science"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- GAPP card -->
            <LinearLayout
                android:id="@+id/card_gapp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/card_bg"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:text="GAPP"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_card_gapp_desc"
                    android:text="GAPP - Foundation in Business\nGAPP - Foundation in Computing"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom toolbar with icon buttons -->
    <LinearLayout
        android:id="@+id/bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_eligibility_toolbar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            android:background="@android:color/transparent"
            android:contentDescription="Eligibility"
            app:tint="@color/white" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/btn_contact_toolbar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_call"
            android:background="@android:color/transparent"
            android:contentDescription="Contact"
            app:tint="@color/white" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/btn_about_toolbar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_info_details"
            android:background="@android:color/transparent"
            android:contentDescription="About"
            app:tint="@color/white" />
    </LinearLayout>

</RelativeLayout>
